{
    "env": {
        "es2021": true,
        "browser": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 13
    },
    "rules": {
        "class-methods-use-this": 0,
        "react/jsx-filename-extension": [
            "error",
            {
              "extensions": [".js", ".jsx"]
            }
        ],
        "import/extensions": [
            "error",
            "ignorePackages",
            {
              "js": "never",
              "jsx": "never",
              "ts": "never",
              "tsx": "never"
            }
         ],
         "import/prefer-default-export": 0,
         "no-use-before-define": "off",
         "@typescript-eslint/no-use-before-define": "off"
    }
}